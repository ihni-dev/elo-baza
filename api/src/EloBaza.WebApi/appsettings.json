{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "EloBaza": "Verbose"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "logs/log.log",
          "rollingInterval": "Day",
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}]{NewLine}Source: [{SourceContext}]{NewLine}{Message}{NewLine}{Exception}{NewLine}",
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      },
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss} {Level:u3}]{NewLine}Source: [{SourceContext}]{NewLine}{Message}{NewLine}{Exception}{NewLine}",
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  },
  "ConnectionStrings": {
    "DB": "Server=127.0.0.1;Database=master;User=sa;Password=1Secure*Password1"
  }
}
